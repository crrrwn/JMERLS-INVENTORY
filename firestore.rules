rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper: user is signed in
    function isSignedIn() {
      return request.auth != null;
    }
    // Helper: get user profile for role
    function userRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    function isAdmin() {
      return isSignedIn() && userRole() == 'admin';
    }

    // Products: any authenticated user can read/write (you can restrict write to admin if needed)
    match /products/{productId} {
      allow read, write: if isSignedIn();
    }

    // Stock logs: authenticated only
    match /stockLogs/{logId} {
      allow read, write: if isSignedIn();
    }

    // Sales: authenticated only
    match /sales/{saleId} {
      allow read, write: if isSignedIn();
    }

    // System logs: authenticated read; only backend/writes from app (everyone can write for audit)
    match /systemLogs/{logId} {
      allow read, write: if isSignedIn();
    }

    // Users: allow create on register (own doc only); read/update own; admin can read/update/delete any
    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }
  }
}
